{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": true,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Keywords",
          "name": "keywords",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "David A. Casas"
        },
        {
          "title": "Content preview",
          "name": "banner",
          "type": "image",
          "isPreviewImage": true,
          "required": true 
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft",
          "default": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/content/blog",
      "previewPath": "blog",
      "filePrefix": ""
    }
  ]
}